<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #E8F5E8;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="seeyes.ui.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   style="-fx-background-color: #F0F8F0; -fx-border-color: #A8D8A8; -fx-border-width: 2; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 10;"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="1.0"
                   AnchorPane.rightAnchor="77.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Send"
                style="-fx-background-color: #B8E6B8; -fx-text-fill: #2E7D32; -fx-border-radius: 15; -fx-background-radius: 15; -fx-font-weight: bold;"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="1.0" />
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    vvalue="1.0"
                    style="-fx-background: #E8F5E8; -fx-background-color: transparent;"
                    AnchorPane.topAnchor="1.0"
                    AnchorPane.bottomAnchor="43.0"
                    AnchorPane.leftAnchor="1.0"
                    AnchorPane.rightAnchor="1.0">
            <content>
                <VBox fx:id="dialogContainer"
                      alignment="TOP_RIGHT"
                      style="-fx-background-color: transparent; -fx-spacing: 10;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
